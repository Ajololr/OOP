<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.TableColumn?>
<AnchorPane fx:controller="sample.Controller"
            xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2">
    <children>
        <Button text="Add" layoutY="50" layoutX="50" onAction="#loadFromFile"/>
        <Button text="Add" layoutY="50" layoutX="250" onAction="#saveToFile"/>
        <TableView fx:id="cardsTable" layoutX="100.0" layoutY="100.0" minHeight="400" maxWidth="600">
            <columns>
                <TableColumn fx:id="nameColumn" minWidth="300" text="Name"/>
                <TableColumn fx:id="hashCodeColumn" minWidth="300" text="Hash Code"/>
            </columns>
        </TableView>
        <Button text="Add" layoutY="500" layoutX="50" onAction="#addCard"/>
        <Button text="Add" layoutY="500" layoutX="250" onAction="#editCard"/>
        <Button text="Add" layoutY="500" layoutX="450" onAction="#deleteCard"/>
    </children>
</AnchorPane>